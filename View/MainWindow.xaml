<Window x:Class="Silver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Silver"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded" WindowStartupLocation="CenterScreen"
        Title="Silver" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition Width="0.75*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Name="TransactionsList"
            ItemsSource="{Binding Transactions}" DisplayMemberPath="Comment"
            SelectedIndex="0" />
        <Button Grid.Column="1" Name="HelloButton" Content="Hello" Click="HelloClick" />
    </Grid>
</Window>
